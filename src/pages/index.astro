---
import BaseHead from "../components/BaseHead.astro";
import Navbar from "../components/Navbar.astro";
import Content from "../components/Content.astro";
import Footer from "../components/Footer.astro";
import BlogPostPreview from "../components/BlogPostPreview.astro";

let title = "Limousine Website";
let description = "Free download modern limousine website template themes with SEO";
let cover = "https://cybercar.vercel.app/img/limousine%20chauffeur%20website7.webp";
const unsortedPosts = await Astro.glob("./posts/*.md");
const posts = unsortedPosts.sort(function (a, b) {
	return (
		new Date(b.frontmatter.publishDate).valueOf() - new Date(a.frontmatter.publishDate).valueOf()
	);
});
---
<html lang="en">
	<head>
		<BaseHead title={title} description={description} />
	</head>

	<body class="bg-light">
		<Navbar/>
				<section class="col-md-12 mt-5">
				<img class="img-fluid" width="100%" height="100%" src={cover}/>
				</section>
				
		<div class="container-fluid">
			<main class="row mt-5 mb-5">
			<article class="col-md-12 p-3 p-md-5">
			<Content/>
			<section class="row">
					{posts.map(({ url, frontmatter }) => (
						<BlogPostPreview
							title={frontmatter.title}
							description={frontmatter.description}
							publishDate={frontmatter.publishDate}
							url={url}
						/>
					))}
				</section>
			</article>
		</main>
		</div>
		<Footer/>
	</body>
</html>
